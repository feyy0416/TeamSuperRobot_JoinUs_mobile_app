<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hot_event_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/app_logo_round"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/hot_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hot Event 1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hot_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="hiking with Mellisa at national forest coffee with friends around the Bay Area" />
    </LinearLayout>



</androidx.cardview.widget.CardView>