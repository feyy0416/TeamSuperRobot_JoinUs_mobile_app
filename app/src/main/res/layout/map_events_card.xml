<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_event_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/map_event_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_logo_round"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/map_event_title"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="Event 1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/map_distance"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textSize="11sp"
                android:layout_gravity="right"
                android:text="2.5 miles" />

            <TextView
                android:id="@+id/map_event_description"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginTop="0dp"
                android:text="hiking with Mellisa at national forest coffee at national forest" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>